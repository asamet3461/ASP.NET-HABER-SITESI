@model Post

<div class="row mb-2">
    <div class="col-md-6">
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary-emphasis">@Model.Category?.Name</strong>
                <h3 class="mb-0">@Model.Title</h3>
                <div class="mb-1 text-body-secondary">
                    @(Model.PublishedAt.HasValue? Model.PublishedAt.Value.ToString("MMMM dd") : "")
                </div>
                <p class="card-text mb-auto">@Model.Summary</p>
                <a href="#" class="icon-link gap-1 icon-link-hover stretched-link">
                    Devamını oku
                    <svg class="bi" aria-hidden="true"><use xlink:href="#chevron-right"></use></svg>
                </a>
            </div>
            <div class="col-auto d-none d-lg-block">
                @if (!string.IsNullOrEmpty(Model.FeaturedImage))
                {
                    <img src="@Model.FeaturedImage" alt="@Model.Title" class="img-fluid" style="max-height: 250px; width: auto;" />
                }
                else
                {
                    <svg aria-label="Placeholder: Thumbnail" class="bd-placeholder-img" height="250" width="200" xmlns="http://www.w3.org/2000/svg">
                        <rect width="100%" height="100%" fill="#55595c"></rect>
                        <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                    </svg>
                }
            </div>
        </div>
    </div>
</div>