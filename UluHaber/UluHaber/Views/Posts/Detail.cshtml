@model UluHaber.Entities.Post
@{
    ViewData["Title"] = Model.Title;
}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <article class="blog-post mt-4">
            <h1 class="display-4 mb-3">@Model.Title</h1>
            <div class="mb-3 text-muted">
                <span class="me-2"><i class="bi bi-person"></i> @Model.AuthorName</span>
                <span class="me-2">|</span>
                <span class="me-2"><i class="bi bi-calendar"></i> @(Model.PublishedAt?.ToString("dd MMMM yyyy") ?? Model.CreatedAt.ToString("dd MMMM yyyy"))</span>
                <span class="me-2">|</span>
                <span class="me-2"><i class="bi bi-tag"></i> @Model.Category?.Name</span>
            </div>
            @if (!string.IsNullOrEmpty(Model.FeaturedImage))
            {
                <img src="@Model.FeaturedImage" alt="@Model.Title" class="img-fluid rounded mb-4 w-100" style="max-height:400px; object-fit:cover;" />
            }
            <div class="lead mb-4">
                @Model.Summary
            </div>
            <div class="blog-content">
                @Html.Raw(Model.Content)
            </div>
        </article>
    </div>
</div>

