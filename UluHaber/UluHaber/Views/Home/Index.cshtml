@model IEnumerable<Post>
@{
    ViewData["Title"] = "Home Page";
}

<div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
    <div class="col-lg-6 px-0">
        <h1 class="display-4 fst-italic">UluHaber'e Hoş Geldiniz</h1>
        <p class="lead my-3">Güncel haberler, analizler ve önemli gelişmeler hakkında bilgi alabileceğiniz güvenilir haber kaynağınız.</p>
        <p class="lead mb-0"><a href="#" class="text-body-emphasis fw-bold">Devamını oku...</a></p>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row mb-2">
        <div class="col-md-6">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary-emphasis">@item.Category?.Name</strong>
                    <h3 class="mb-0">@item.Title</h3>
                    <div class="mb-1 text-body-secondary">
                        @(item.PublishedAt.HasValue? item.PublishedAt.Value.ToString("MMMM dd") : "")
                    </div>
                    <p class="card-text mb-auto">@item.Summary</p>
                    <a href="/Post/Detail/@item.Id" class="icon-link gap-1 icon-link-hover stretched-link">
                        Devamını oku
                        <svg class="bi" aria-hidden="true"><use xlink:href="#chevron-right"></use></svg>
                    </a>
                </div>
                <div class="col-auto d-none d-lg-block">
                    @if (!string.IsNullOrEmpty(item.FeaturedImage))
                    {
                        <img src="@item.FeaturedImage" alt="@item.Title" class="img-fluid" style="max-height: 250px; width: auto;" />
                    }
                    else
                    {
                        <svg aria-label="Placeholder: Thumbnail" class="bd-placeholder-img" height="250" width="200" xmlns="http://www.w3.org/2000/svg">
                            <rect width="100%" height="100%" fill="#55595c"></rect>
                            <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                        </svg>
                    }
                </div>
            </div>
        </div>
    </div>
}
