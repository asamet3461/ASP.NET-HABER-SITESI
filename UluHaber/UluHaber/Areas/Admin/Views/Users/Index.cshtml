@model IEnumerable<UluHaber.Entities.User>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Kullanıcılar</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-user-plus me-1"></i> Yeni Kullanıcı
    </a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Ad Soyad</th>
            <th>Admin</th>
            <th>Yazar</th>
            <th>Aktif</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.FirstName @user.LastName</td>
            <td>@(user.IsAdmin ? "Evet" : "Hayır")</td>
            <td>@(user.IsAuthor ? "Evet" : "Hayır")</td>
            <td>@(user.IsActive ? "Evet" : "Hayır")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Düzenle</a>
                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Detay</a>
                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>
