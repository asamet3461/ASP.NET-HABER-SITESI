@model UluHaber.Entities.User

@{
    ViewData["Title"] = "Yeni Kullanıcı";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">
                <i class="fas fa-plus me-2"></i>Yeni Kullanıcı Ekle
            </h1>
            <a asp-action="Index" class="btn btn-admin btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">
                    <i class="fas fa-user-plus me-2 text-primary"></i>Kullanıcı Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-medium">
                                <i class="fas fa-user me-1"></i>Ad
                            </label>
                            <input asp-for="FirstName" class="form-control" placeholder="Kullanıcının adını giriniz..." />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-medium">
                                <i class="fas fa-user me-1"></i>Soyad
                            </label>
                            <input asp-for="LastName" class="form-control" placeholder="Kullanıcının soyadını giriniz..." />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Username" class="form-label fw-medium">
                                <i class="fas fa-at me-1"></i>Kullanıcı Adı
                            </label>
                            <input asp-for="Username" class="form-control" placeholder="kullanici_adi" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                            <small class="form-text text-muted">Benzersiz kullanıcı adı</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-medium">
                                <i class="fas fa-envelope me-1"></i>E-posta
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="kullanici@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-medium">
                            <i class="fas fa-lock me-1"></i>Şifre
                        </label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Güçlü bir şifre giriniz..." />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                        <small class="form-text text-muted">En az 6 karakter olmalı</small>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Bio" class="form-label fw-medium">
                            <i class="fas fa-align-left me-1"></i>Hakkında
                        </label>
                        <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Kullanıcı hakkında kısa bilgi..."></textarea>
                        <span asp-validation-for="Bio" class="text-danger small"></span>
                        <small class="form-text text-muted">İsteğe bağlı kısa açıklama</small>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" checked />
                                <label class="form-check-label fw-medium" asp-for="IsActive">
                                    <i class="fas fa-toggle-on me-1"></i>Aktif
                                </label>
                            </div>
                            <small class="form-text text-muted">Kullanıcı hesabı aktif</small>
                        </div>
                        
                        <div class="col-md-3 mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="EmailConfirmed" />
                                <label class="form-check-label fw-medium" asp-for="EmailConfirmed">
                                    <i class="fas fa-envelope-open me-1"></i>E-posta Onaylı
                                </label>
                            </div>
                            <small class="form-text text-muted">E-posta adresi onaylandı</small>
                        </div>
                        
                        <div class="col-md-3 mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="IsAuthor" />
                                <label class="form-check-label fw-medium" asp-for="IsAuthor">
                                    <i class="fas fa-pen me-1"></i>Yazar
                                </label>
                            </div>
                            <small class="form-text text-muted">Haber yazabilir</small>
                        </div>
                        
                        <div class="col-md-3 mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="IsAdmin" />
                                <label class="form-check-label fw-medium" asp-for="IsAdmin">
                                    <i class="fas fa-crown me-1"></i>Admin
                                </label>
                            </div>
                            <small class="form-text text-muted">Yönetici yetkileri</small>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-admin btn-primary">
                            <i class="fas fa-save me-2"></i>Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-admin btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">
                    <i class="fas fa-lightbulb me-2 text-warning"></i>Kullanıcı Rolleri
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="fw-medium">
                        <i class="fas fa-user me-1 text-secondary"></i>Kullanıcı
                    </h6>
                    <ul class="small text-muted">
                        <li>Haberleri okuyabilir</li>
                        <li>Yorum yapabilir</li>
                        <li>Profil düzenleyebilir</li>
                        <li>Sınırlı erişim</li>
                    </ul>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-medium">
                        <i class="fas fa-pen me-1 text-warning"></i>Yazar
                    </h6>
                    <ul class="small text-muted">
                        <li>Haber yazabilir</li>
                        <li>Kendi haberlerini düzenleyebilir</li>
                        <li>Kategorileri görüntüleyebilir</li>
                        <li>Orta seviye erişim</li>
                    </ul>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-medium">
                        <i class="fas fa-crown me-1 text-danger"></i>Admin
                    </h6>
                    <ul class="small text-muted">
                        <li>Tam sistem erişimi</li>
                        <li>Kullanıcıları yönetebilir</li>
                        <li>Kategorileri düzenleyebilir</li>
                        <li>Tüm haberleri yönetebilir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Kullanıcı adı otomatik oluşturma
        document.querySelector('input[asp-for="FirstName"]').addEventListener('input', function() {
            const firstName = this.value;
            const lastName = document.querySelector('input[asp-for="LastName"]').value;
            
            if (firstName && lastName) {
                const username = (firstName + '_' + lastName)
                    .toLowerCase()
                    .replace(/ğ/g, 'g')
                    .replace(/ü/g, 'u')
                    .replace(/ş/g, 's')
                    .replace(/ı/g, 'i')
                    .replace(/ö/g, 'o')
                    .replace(/ç/g, 'c')
                    .replace(/[^a-z0-9_]/g, '')
                    .replace(/_+/g, '_')
                    .trim('_');
                
                document.querySelector('input[asp-for="Username"]').value = username;
            }
        });
        
        document.querySelector('input[asp-for="LastName"]').addEventListener('input', function() {
            const firstName = document.querySelector('input[asp-for="FirstName"]').value;
            const lastName = this.value;
            
            if (firstName && lastName) {
                const username = (firstName + '_' + lastName)
                    .toLowerCase()
                    .replace(/ğ/g, 'g')
                    .replace(/ü/g, 'u')
                    .replace(/ş/g, 's')
                    .replace(/ı/g, 'i')
                    .replace(/ö/g, 'o')
                    .replace(/ç/g, 'c')
                    .replace(/[^a-z0-9_]/g, '')
                    .replace(/_+/g, '_')
                    .trim('_');
                
                document.querySelector('input[asp-for="Username"]').value = username;
            }
        });
    </script>
}

